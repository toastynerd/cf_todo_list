<div class="large-10 centered">
  <h2><%= @list.name %></h2>
  <h4><%= @list.when %></h4>
  <%= link_to "Edit List", edit_list_path, :class => "button" %>
  <%= link_to "Delete List", list_path(@list), :method => :delete,
